<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonStart"
            android:padding="4dp" android:layout_margin="4dp" android:layout_marginStart="18dp"
            app:layout_constraintStart_toEndOf="@+id/buttonJumpLeft"
            app:layout_constraintEnd_toStartOf="@+id/buttonJumpRight" android:layout_marginEnd="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="318dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="632dp"
            android:visibility="visible" android:onClick="onStartClick"
    />
    <Button
            android:text="@string/upload_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonStartUpload"
            android:padding="4dp" android:layout_margin="4dp" android:layout_marginStart="18dp"
            app:layout_constraintStart_toEndOf="@+id/buttonJumpLeft"
            app:layout_constraintEnd_toStartOf="@+id/buttonJumpRight" android:layout_marginEnd="48dp"
            android:visibility="visible" android:onClick="onUploadClick"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/jump_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonJumpLeft"
            android:padding="4dp" android:layout_margin="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/buttonStart"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="310dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="616dp"
            android:visibility="invisible" android:onClick="onJumpLeftClick"/>
    <Button
            android:text="@string/jump_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonJumpRight"
            android:padding="4dp" android:layout_margin="4dp" android:layout_marginStart="17dp"
            app:layout_constraintStart_toEndOf="@+id/buttonStart" android:layout_marginEnd="56dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="310dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="616dp" android:visibility="invisible" android:onClick="onJumpRightClick"/>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:padding="16dp" android:gravity="center"
            android:layout_margin="8dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" android:layout_marginBottom="251dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonJumpLeft"/>
</androidx.constraintlayout.widget.ConstraintLayout>